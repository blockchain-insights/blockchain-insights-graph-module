{
  "compilerOptions": {
    "declaration": true,          
    "declarationDir": "dist",     
    "emitDeclarationOnly": true,  
    "outDir": "dist",             
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
